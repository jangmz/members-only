<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>messages</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include("partials/menu.ejs") %>
    <div class="container">
        <h1 class="text-center">Messages</h1>
        <% if (messages) { %>
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <% if (messages.length !== 0) { %>
                        <% messages.map(message => { %>
                            <div class="card text-center m-3 col-12">
                                <div class="card-head">
                                    <h3 class="card-title"><%= message.title %></h3>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><%= message.text %></p>
                                </div>
                                <div class="card-footer">
                                    <p>
                                        Posted <%= message.timestamp.getDate() %>-<%= message.timestamp.getMonth() + 1 %>-<%= message.timestamp.getFullYear() %>
                                        by <%= message.username %>
                                    </p>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>There are not messages in the database currently.</p>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <div>
                <p>Error: Failed to retrieve data from database.</p>
            </div>
        <% } %>
    </div>
    
    <!-- Bootstrap JavaScript and dependencies (jQuery and Popper.js) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>